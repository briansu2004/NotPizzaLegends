@inherits Scene

<DemoMap @ref="Map" />
<Hero @ref="_hero" X="0.5" Y="4.0" />

<CascadingValue Value="this">
    <GameCanvas @ref="_canvas" />
</CascadingValue>

@code {

    private GameCanvas? _canvas;

    ISprite? _hero;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
            Sprites.Add(_hero);
    }

    public override void MoveUp() => _hero?.Move(0, -0.05);
    public override void MoveDown() => _hero?.Move(0, 0.05);
    public override void MoveLeft() => _hero?.Move(-0.05, 0);
    public override void MoveRight() => _hero?.Move(0.05, 0);
}
